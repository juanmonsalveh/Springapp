<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<bean id="admin" class="org.jmonsalve.Administrador">
		<constructor-arg name="idAdmin" value="1"></constructor-arg>
		<constructor-arg name="name" value="Juan"></constructor-arg>
		<constructor-arg name="direccion" ref="direccion" ></constructor-arg>
	</bean>
	<bean id="direccion" class="org.jmonsalve.Direccion">
		<constructor-arg name="calle" value="calle falsa"></constructor-arg>
		<constructor-arg name="carrera" value="carrera 123"></constructor-arg>
	</bean>
	<context:component-scan base-package="org.jmonsalve"></context:component-scan>
</beans>
